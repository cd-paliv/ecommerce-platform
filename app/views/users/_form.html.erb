<div class="col-md-6 text-nowrap">
  <%= form_with(model: user) do |form| %>
    <div class="mb-3 row">
      <%= form.label :username, class: "col-sm-2 col-form-label" %>
      <%= form.text_field :username, class: "form-control" %>
    </div>

    <div class="mb-3 row">
      <%= form.label :email, class: "col-sm-2 col-form-label" %>
      <%= form.text_field :email, class: "form-control" %>
    </div>

    <div class="mb-3 row">
      <%= form.label :phone, class: "col-sm-2 col-form-label" %>
      <%= form.text_field :phone, class: "form-control" %>
    </div>

    <div class="mb-3 row">
      <%= form.label :name, class: "col-sm-2 col-form-label" %>
      <%= form.text_field :name, class: "form-control" %>
    </div>

    <% unless user.persisted? %>
      <div class="mb-3 row">
        <%= form.label :role, class: "col-sm-2 col-form-label" %>
        <%= form.select :role, User::ROLES.map { |role| [role.titleize, role] }, {}, { class: "form-control" } %>
      </div>

      <div class="mb-3 row">
        <%= form.label :password, class: "col-sm-2 col-form-label" %>
        <%= form.password_field :password, class: "form-control" %>
      </div>
    <% end %>

    <div class="mt-4 text-center">
      <%= form.submit "Guardar", class: "btn btn-outline-success" %>
    </div>
  <% end %>

</div>