<% content_for :title, "Usuarios" %>

<div class="text-center py-5">
  <h1>Usuarios</h1>
</div>

<div class="container bootstrap snippets bootdey px-4 px-lg-5">
  <div class="row">
    <div class="col-lg-12">
      <div class="main-box no-header clearfix">
        <div class="main-box-body clearfix">
          <div class="table-responsive">
            <table class="table user-list rounded table-bordered">
              <thead>
                <tr class="text-center">
                  <th><span>Nombre</span></th>
                  <th><span>Usuario</span></th>
                  <th><span>Email</span></th>
                  <th><span>Rol</span></th>
                  <th><span>Creado</span></th>
                  <th><span>Estado</span></th>
                  <th>Acciones</th>
                </tr>
              </thead>
              <tbody>
                <% @users.each do |user| %>
                  <tr id="<%= dom_id user %>">
                    <td><%= user.name %></td>
                    <td><a><%= user.username %></a></td>
                    <td>
                      <a href="mailto:<%= user.email %>"><%= user.email %></a>
                    </td>
                    <td><%= user.role.titleize %></td>
                    <td><%= user.created_at.strftime("%d/%m/%Y") %></td>
                    <td class="text-center">
                      <% if user.deactivated %>
                        <span class="label label-danger">Deactivated</span>
                      <% else %>
                        <span class="label label-success">Active</span>
                      <% end %>
                    </td>
                    <td class="text-center" style="width: 20%;">
                      <%= link_to 'Ver', user_path(user), class: "btn btn-outline-primary btn-sm" %>
                      <%= link_to 'Editar', edit_user_path(user), class: "btn btn-outline-secondary btn-sm" %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="d-flex justify-content-center mb-5 pt-5">
    <%== pagy_bootstrap_nav(@pagy) %>
  </div>
</div>