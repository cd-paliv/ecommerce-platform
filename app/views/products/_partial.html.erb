<div class="card shadow-0 border rounded-3 mb-4">
  <div class="card-body">
    <div class="row">
      <div class="col-md-12 col-lg-3 col-xl-3 mb-4 mb-lg-0">
        <div class="bg-image hover-zoom ripple rounded ripple-surface">
          <% if product.images.attached? %>
            <%= image_tag product.images.first, class: "w-100 product-image" %>
          <% end %>
          <a href="<%= product_path(product) %>">
            <div class="hover-overlay">
              <div class="mask" style="background-color: rgba(253, 253, 253, 0.15);"></div>
            </div>
          </a>
        </div>
      </div>
      <div class="col-md-6 col-lg-6 col-xl-6">
        <h5><%= product.name %></h5>
        <div class="mt-1 mb-0 text-muted small">
          <span><%= product.categories.map(&:name).join(", ") %></span>
        </div>
        <p class="text-truncate mb-4 mb-md-0">
          <%= truncate(product.description, length: 100) %>
        </p>
      </div>
      <div class="col-md-6 col-lg-3 col-xl-3 border-sm-start-none border-start">
        <div class="d-flex flex-row align-items-center mb-1">
          <h4 class="mb-1 me-1"><%= number_to_currency(product.price) %></h4>
        </div>
        <div class="d-flex flex-column mt-4">
          <%= link_to "Details", product_path(product), class: "btn btn-primary btn-sm" %>
          <% if current_user %>
            <% sale_item = current_sale.sale_items.find_by(product_id: product.id) %>
            <% if sale_item %>
              <p><strong>En el carrito</strong> <%= sale_item.quantity %></p>
            <% else %>
              <%= form_with(model: [current_sale, SaleItem.new], local: true) do |f| %>
                <%= f.label :quantity %>
                <%= f.number_field :quantity, min: 1 %>
                <%= f.hidden_field :product_id, value: product.id %>
                <%= f.hidden_field :price, value: product.price %>
                <%= f.submit "Agregar al carrito" %>
              <% end %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>